# 在撰写邮件前更改发送账号 
macro index "<esc>1" ":set from='kyle x lau <kylexlau@gmail.com>'"
macro index "<esc>2" ":set from='kyle x lau <kylexlau@qq.com>'"

# 发送邮件前能够临时修改发送账号
macro compose "<esc>1" ":push <edit-from><enter><kill-line>kyel x lau <kylexlau@gmail.com><enter>"
macro compose "<esc>2" ":push <edit-from><enter><kill-line>kyle x lau <kylexlau@qq.com><enter>"

# 减少 Y 键使用率，避免误发邮件
macro index "c" "<change-folder>?<toggle-mailboxes>"
macro pager "c" "<change-folder>?<toggle-mailboxes>"
